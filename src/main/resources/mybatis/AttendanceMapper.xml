<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.gchf.dao.IAttendanceDAO">
	<resultMap id="attendance_DB_Result" type="attendance">
		<result column="code" property="code" />
		<result column="terminal_code" property="terminalCode" />
		<result column="project_code" property="projectCode" />
		<result column="project_name" property="projectName" />
		<result column="staff_code" property="staffCode" />
		
		<result column="staff_name" property="staffName" />
		<result column="staff_mobile" property="staffMobile" />
		<result column="sim" property="sim" />
		<result column="status" property="status" />
		
		<result column="create_datetime" property="createDatetime" />
		<result column="start_datetime" property="startDatetime" />
		<result column="end_datetime" property="endDatetime" />
		<result column="settle_datetime" property="settleDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="projectCode != null and projectCode != '' ">
				AND t.project_code = #{projectCode}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="staffCode != null and staffCode != '' ">
				AND t.staff_code = #{staffCode}
			</if>
			<if test="keyword != null and keyword != '' ">
				AND (t.staff_mobile like "%"#{keyword}"%" OR t.staff_name like "%"#{keyword}"%") 
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != ''">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
		</trim>
	</sql>
	<select id="select_attendance" parameterType="attendance" resultMap="attendance_DB_Result">
		SELECT
		t.code
		,t.project_code
		,t.project_name
		,t.staff_code
		,t.staff_name
		,t.staff_mobile
		,t.status
		,t.create_datetime
		,t.start_datetime
		,t.end_datetime
		,t.settle_datetime
		,t.remark
		FROM
		thf_attendance t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_attendance_count" parameterType="attendance"
		resultType="java.lang.Long">
		SELECT count(1) FROM thf_attendance t
		<include refid="where_condition" />
	</select>

	<insert id="insert_attendance" parameterType="attendance">
		INSERT INTO
		thf_attendance(
		code
		,project_code
		,project_name
		,staff_code
		,staff_name
		,status
		,create_datetime
		,start_datetime
		,end_datetime
		,settle_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{projectCode}
		,#{projectName}
		,#{staffCode}
		,#{staffName}
		,#{status}
		,#{createDatetime}
		,#{startDatetime}
		,#{endDatetime}
		,#{settleDatetime}
		,#{remark}
		)
	</insert>

	<update id="to_start" parameterType="attendance">
		UPDATE thf_attendance
		SET
		status = #{status}
		,sim = #{sim}
		,terminal_code = #{terminalCode}
		,start_datetime = #{startDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="to_end" parameterType="attendance">
		UPDATE thf_attendance
		SET
		status = #{status}
		,sim = #{sim}
		,terminal_code = #{terminalCode}
		,end_datetime = #{endDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="update_status" parameterType="attendance">
		UPDATE thf_attendance
		SET
		status = #{status}
		,settle_datetime = #{settleDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="attendance_startClockIn" parameterType="attendance">
		UPDATE thf_attendance
		SET
		status = #{status}
		,start_datetime = #{startDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="attendance_endClockIn" parameterType="attendance">
		UPDATE thf_attendance
		SET
		status = #{status}
		,end_datetime = #{endDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="attendance_updateStaffMobile" parameterType="attendance">
		UPDATE thf_attendance
		SET
		staff_mobile = #{staffMobile}
		WHERE staff_code = #{staffCode}
	</update>
</mapper>