<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.gchf.dao.ICcontractDAO">
	<resultMap id="ccontract_DB_Result" type="ccontract">
		<result column="code" property="code" />
		<result column="employ_code" property="employCode" />
		<result column="project_code" property="projectCode" />
		<result column="staff_code" property="staffCode" />
		<result column="staff_name" property="staffName" />
		<result column="staff_mobile" property="staffMobile" />
		
		<result column="content_pic" property="contentPic" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="employCode != null and employCode != '' ">
				AND t.employ_code = #{employCode}
			</if>
			<if test="staffCode != null and staffCode != '' ">
				AND t.staff_code = #{staffCode}
			</if>
			<choose>
				<when test="projectCode != null and projectCode != '' ">
					AND t.project_code = #{projectCode}
				</when>
				<when test="projectCodeList != null and projectCodeList.size() > 0 ">
					AND t.project_code IN 
					<foreach collection="projectCodeList" item="item" index="index" open="(" separator="," close=")">
						#{item}
					</foreach>
				</when>
			</choose>
			<if test="updater != null and updater != '' ">
				AND t.updater = #{updater}
			</if>
			<if test="keyword != null and keyword != '' ">
				AND t.staff_name like "%"#{keyword}"%"
			</if>
			
		</trim>
	</sql>
	
	<select id="select_ccontract" parameterType="ccontract" resultMap="ccontract_DB_Result">
		SELECT
		t.code
		,t.employ_code
		,t.project_code
		,t.project_name
		,t.staff_code
		,t.staff_name
		,t.staff_mobile
		,t.content_pic
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		thf_ccontract t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_ccontract_count" parameterType="ccontract"
		resultType="java.lang.Long">
		SELECT count(1) FROM thf_ccontract t
		<include refid="where_condition" />
	</select>

	<insert id="insert_ccontract" parameterType="ccontract">
		INSERT INTO
		thf_ccontract(
		code
		,employ_code
		,project_code
		,project_name
		,staff_code
		,staff_name
		,staff_mobile
		,content_pic
		,updater
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{employCode}
		,#{projectCode}
		,#{projectName}
		,#{staffCode}
		,#{staffName}
		,#{staffMobile}
		,#{contentPic}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_ccontract" parameterType="ccontract">
		UPDATE thf_ccontract
		SET
		content_pic = #{contentPic}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<delete id="delete_ccontract" parameterType="ccontract">
		DELETE FROM thf_ccontract WHERE code = #{code}
	</delete>
	
</mapper>