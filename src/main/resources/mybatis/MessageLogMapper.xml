<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.gchf.dao.IMessageLogDAO">
	<resultMap id="messageLog_DB_Result" type="messageLog">
		<result column="code" property="code" />
		<result column="message_code" property="messageCode" />
		<result column="salary_code" property="salaryCode"/>
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="messageCode != null and messageCode != '' ">
				AND t.message_code = #{messageCode}
			</if>
			<if test="salaryCode != null and salaryCode != '' ">
				AND t.salary_code = #{salaryCode}
			</if>
		</trim>
	</sql>
	
	<select id="select_messageLog" parameterType="messageLog" resultMap="messageLog_DB_Result">
		SELECT
		t.code
		,t.message_code
		,t.salary_code
		FROM
		thf_message_log t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_message_count" parameterType="message"
		resultType="java.lang.Long">
		SELECT count(1) FROM thf_message_log t
		<include refid="where_condition" />
	</select>

	<insert id="insert_message" parameterType="message">
		INSERT INTO
		thf_message_log(
		code
		,message_code
		,salary_code
		)
		VALUES(
		#{code}
		,#{messageCode}
		,#{salaryCode}
		)
	</insert>


</mapper>