<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.gchf.dao.IProjectCardDAO">
	<resultMap id="projectCard_DB_Result" type="projectCard">
		<result column="code" property="code" />
		<result column="project_code" property="projectCode" />
		<result column="project_name" property="projectName" />
		
		<result column="bank_code" property="bankCode" />
		<result column="bank_name" property="bankName" />
		<result column="subbranch" property="subbranch" />
		<result column="account_name" property="accountName"/>
		<result column="bankcard_number" property="bankcardNumber" />
		
		<result column="status" property="status" />
		<result column="create_datetime" property="createDatetime" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<choose>
				<when test="projectCode != null and projectCode != '' ">
					AND t.project_code = #{projectCode}
				</when>
				<when test="projectCodeList != null and projectCodeList.size() > 0 ">
					AND t.project_code IN 
					<foreach collection="projectCodeList" item="item" index="index" open="(" separator="," close=")">
						#{item}
					</foreach>
				</when>
				<when test="projectCodeList != null and projectCodeList.size() == 0">
					AND t.code IN ('')
				</when>
			</choose>
			<if test="status != null and status !='' ">
				AND t.status = #{status}
			</if>
			<if test="keyword != null and keyword != '' ">
				AND (t.bank_name like "%"#{keyword}"%" OR  t.subbranch like "%"#{keyword}"%"  OR  t.bankcard_number like "%"#{keyword}"%" 
						OR  t.account_name like "%"#{keyword}"%" OR  t.project_name like "%"#{keyword}"%")
			</if>
		</trim>
	</sql>
	<select id="select_projectCard" parameterType="projectCard" resultMap="projectCard_DB_Result">
		SELECT
		t.code
		,t.project_code
		,t.project_name
		
		,t.bank_code
		,t.bank_name
		,t.subbranch
		,t.account_name
		,t.bankcard_number
		
		,t.status
		,t.create_datetime
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		thf_project_card t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_projectCard_count" parameterType="projectCard"
		resultType="java.lang.Long">
		SELECT count(1) FROM thf_project_card t
		<include refid="where_condition" />
	</select>

	<insert id="insert_projectCard" parameterType="projectCard">
		INSERT INTO
		thf_project_card(
		code
		,project_code
		,project_name
		
		,bank_code
		,bank_name
		,subbranch
		,bankcard_number
		,account_name
		
		,status
		,create_datetime
		,updater
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{projectCode}
		,#{projectName}
		
		,#{bankCode}
		,#{bankName}
		,#{subbranch}
		,#{bankcardNumber}
		,#{accountName}
		
		,#{status}
		,#{createDatetime}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_projectCard" parameterType="projectCard">
		UPDATE thf_project_card
		SET
		bank_code = #{bankCode}
		,bank_name = #{bankName}
		,subbranch = #{subbranch}
		,account_name = #{accountName}
		,bankcard_number = #{bankcardNumber}
		,status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
</mapper>