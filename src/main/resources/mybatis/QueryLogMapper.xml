<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.gchf.dao.IQueryLogDAO">

	<resultMap type="queryLog" id="queryLog_DB_Result">
		<result column="code" property="code" />
		<result column="user_id" property="userId" />
		<result column="staff_code" property="staffCode" />
		<result column="staff_name" property="staffName" />

		<result column="id_no" property="idNo" />
		<result column="pic1" property="pic1" />

	</resultMap>

	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="staffCode != null and staffCode != '' ">
				AND t.staff_code = #{staffCode}
			</if>
			<if test="idNo != null and idNo != '' ">
				AND t.id_no = #{idNo}
			</if>
			<if test="keyword != null and keyword != '' ">
				AND (t.staff_name like "%"#{keyword}"%" OR t.id_no like "%"#{keyword}"%")
			</if>
		</trim>
	</sql>

	<select id="select_queryLog" parameterType="queryLog" resultMap="queryLog_DB_Result">
		SELECT
		t.code
		,t.user_id
		,t.staff_code
		,t.staff_name
		,t.id_no
		,t.pic1
		FROM thf_query_log t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_queryLog_count" parameterType="queryLog"
		resultType="java.lang.Long">
		SELECT count(1) FROM thf_query_log t
		<include refid="where_condition" />
	</select>

	<insert id="insert_queryLog" parameterType="queryLog">
		INSERT INTO
		thf_query_log(
		code
		,user_id
		,staff_code
		,staff_name
		,id_no
		,pic1
		)
		VALUES(
		#{code}
		,#{userId}
		,#{staffCode}
		,#{staffName}
		,#{idNo}
		,#{pic1}
		)
	</insert>

	<delete id="delete_queryLog" parameterType="queryLog">
		DELETE FROM
		thf_query_log
		WHERE
		code = #{code}
	</delete>
</mapper>